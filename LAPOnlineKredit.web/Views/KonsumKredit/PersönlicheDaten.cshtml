@model LAPOnlineKredit.web.Models.PersoenlicheDatenModel

@{
    ViewBag.Title = "PersönlicheDaten";
}

<div id="content" style="margin-top: 20px">
    <h2>Persönliche Daten</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.ID_Kunde)

        <div class="form-horizontal">
            <div class="row" style="margin-top: 20px">
                <div class="col-lg-offset-3 col-md-offset-3  col-lg-6 col-md-6">
                    Bitte tragen Sie in die unten stehenden Eingabefelder Ihre persönlichen Daten ein.
                    <br /><br /> 
                </div>
            </div>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="row">
                <div class="col-lg-offset-1 col-md-offset-1 col-lg-3 col-md-3" style="text-align: right">
                    @Html.LabelFor(model => model.Geschlecht, htmlAttributes: new { @class = "control-label" })
                </div>
                <div class="col-lg-6 col-md-6">
                    @Html.EnumDropDownListFor(model => model.Geschlecht)
                    @Html.ValidationMessageFor(model => model.Geschlecht, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row">
                <div class="col-lg-offset-1 col-md-offset-1 col-lg-3 col-md-3" style="text-align: right">
                    @Html.LabelFor(model => model.ID_Titel, htmlAttributes: new { @class = "control-label" })
                </div>
                <div class="col-lg-6 col-md-6">
                    @Html.DropDownListFor(model => model.ID_Titel, new SelectList(Model.AlleTitelAngaben, "ID", "Bezeichnung"), "bitte wählen")
                    @Html.ValidationMessageFor(model => model.ID_Titel, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row">
                <div class="col-lg-offset-1 col-md-offset-1 col-lg-3 col-md-3" style="text-align: right">
                    @Html.LabelFor(model => model.Vorname, htmlAttributes: new { @class = "control-label" })
                </div>
                <div class="col-lg-6 col-md-6">
                    @Html.EditorFor(model => model.Vorname, new { htmlAttributes = new { @class = "form-control", placeholder = "Max" } })
                    @Html.ValidationMessageFor(model => model.Vorname, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row">
                <div class="col-lg-offset-1 col-md-offset-1 col-lg-3 col-md-3" style="text-align: right">
                    @Html.LabelFor(model => model.Nachname, htmlAttributes: new { @class = "control-label" })
                </div>
                <div class="col-lg-6 col-md-6">
                    @Html.EditorFor(model => model.Nachname, new { htmlAttributes = new { @class = "form-control", placeholder = "Muster" } })
                    @Html.ValidationMessageFor(model => model.Nachname, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row">
                <div class="col-lg-offset-1 col-md-offset-1 col-lg-3 col-md-3" style="text-align: right">
                    @Html.LabelFor(model => model.ID_Bildung, htmlAttributes: new { @class = "control-label" })
                </div>
                <div class="col-lg-6 col-md-6">
                    @Html.DropDownListFor(model => model.ID_Bildung, new SelectList(Model.AlleBildungAngaben, "ID", "Bezeichnung"))
                    @Html.ValidationMessageFor(model => model.ID_Bildung, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row">
                <div class="col-lg-offset-1 col-md-offset-1 col-lg-3 col-md-3" style="text-align: right">
                    @Html.LabelFor(model => model.ID_Familienstand, htmlAttributes: new { @class = "control-label" })
                </div>
                <div class="col-lg-6 col-md-6">
                    @Html.DropDownListFor(model => model.ID_Familienstand, new SelectList(Model.AlleFamilienStandAngaben, "ID", "Bezeichnung"))
                    @Html.ValidationMessageFor(model => model.ID_Familienstand, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row">
                <div class="col-lg-offset-1 col-md-offset-1 col-lg-3 col-md-3" style="text-align: right">
                    @Html.LabelFor(model => model.ID_Staatsbuergerschaft, htmlAttributes: new { @class = "control-label" })
                </div>
                <div class="col-lg-6 col-md-6">
                    @Html.DropDownListFor(model => model.ID_Staatsbuergerschaft, new SelectList(Model.AlleStaatsbuergerschaftsAngaben, "ID", "Bezeichnung"))
                    @Html.ValidationMessageFor(model => model.ID_Staatsbuergerschaft, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row">
                <div class="col-lg-offset-1 col-md-offset-1 col-lg-3 col-md-3" style="text-align: right">
                    @Html.LabelFor(model => model.ID_Wohnart, htmlAttributes: new { @class = "control-label" })
                </div>
                <div class="col-lg-6 col-md-6">
                    @Html.DropDownListFor(model => model.ID_Wohnart, new SelectList(Model.AlleWohnartAngaben, "ID", "Bezeichnung"))
                    @Html.ValidationMessageFor(model => model.ID_Wohnart, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row">
                <div class="col-lg-offset-1 col-md-offset-1 col-lg-3 col-md-3" style="text-align: right">
                    @Html.LabelFor(model => model.ID_Identifikationsart, htmlAttributes: new { @class = "control-label" })
                </div>
                <div class="col-lg-6 col-md-6">
                    @Html.DropDownListFor(model => model.ID_Identifikationsart, new SelectList(Model.AlleIdentifikationsAngaben, "ID", "Bezeichnung"))
                    @Html.ValidationMessageFor(model => model.ID_Identifikationsart, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row">
                <div class="col-lg-offset-1 col-md-offset-1 col-lg-3 col-md-3" style="text-align: right">
                    @Html.LabelFor(model => model.IdentifikationsNummer, htmlAttributes: new { @class = "control-label" })
                </div>
                <div class="col-lg-6 col-md-6">
                    @Html.EditorFor(model => model.IdentifikationsNummer, new { htmlAttributes = new { @class = "form-control", placeholder = "Muster" } })
                    @Html.ValidationMessageFor(model => model.IdentifikationsNummer, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row">
                <div class="col-lg-offset-4 col-md-offset-4 col-lg-3 col-md-3">

                    <input type="submit" value="Bestätigen" class="btn btn-default" />

                </div>
            </div>
        </div>
    }

</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
